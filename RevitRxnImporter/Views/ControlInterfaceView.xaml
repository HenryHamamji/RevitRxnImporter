<Page x:Class="RevitReactionImporter.ControlInterfaceView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="RevitReactionnImporterApp"
      Width="350"
      Height="250">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Page.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="25" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
                    Orientation="Horizontal">

            <Button Name="ImportRAMReactions"
                    Width="60"
                    Height="60"
                    Margin="25 7 7 7"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Click="OnImportBeamReactionsClick">
                <Image Source="/RevitReactionImporterApp;component/Resources/import.jpg"
                       Width="50"
                       Height="60"/>
            </Button>
            <Button x:Name="ResetBeamReactions"
            	Width="60"
            	Height="60"
            	Margin="50,7,7,0"
            	HorizontalAlignment="Left"
            	VerticalAlignment="Top"
            	Click="OnResetBeamReactionsClick" RenderTransformOrigin="2.427,0.448">
                <Image Source="/RevitReactionImporterApp;component/Resources/reset.png"
                       Width="60"
                       Height="50"/>
            </Button>
            <Button x:Name="Configure"
            	Width="60"
            	Height="60"
            	Margin="60,7,7,0"
            	HorizontalAlignment="Left"
            	VerticalAlignment="Top"
            	Click="OnConfigureClick" RenderTransformOrigin="2.427,0.448">
                <Image Source="/RevitReactionImporterApp;component/Resources/configure.png"
                       Width="60"
                       Height="50"/>
            </Button>

        </StackPanel>
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal">
            <TextBlock Name="ImportReactionsText"
                       Width="100"
                       Margin="5,0,5,7"
                       Text="Import Beam Reactions"
                       TextAlignment="Center"
                       FontSize="9"/>
            <TextBlock Name="ResetBeamReactionsText"
                       Width="100"
                       Margin="15,0,5,7"
                       Text="Reset Beam Reactions"
                       TextAlignment="Center"
                       FontSize="9"/>
            <TextBlock Name="ConfigureText"
                       Width="100"
                       Margin="17.5,0,7,7"
                       Text="Configure"
                       TextAlignment="Center"
                       FontSize="9"/>
        </StackPanel>

    </Grid>

</Page>
