<Window x:Class="RevitReactionImporter.DataFileBrowser"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RAM Data File Browswer" Height="310" Width="300">

    <DockPanel Margin="10">
        <WrapPanel HorizontalAlignment="Right" DockPanel.Dock="Top" Margin="0,0,0,10">
            <Label Content="RAM Model File:" />
            <TextBox Name="txtEditorRAMModel" Width="210" Margin="10,2,0,12"/>
            <Button Name="btnRAMModelFile" Click="onBrowseFileClick" Margin="0,2,0,12">Browse...</Button>
            <Label Content="RAM Reactions File:" />
            <TextBox Name="txtEditorRAMReactions" Width="210" Margin="10,2,0,12"/>
            <Button Name="btnRAMReactionsFile" Click="onBrowseFileClick" Margin="0,2,0,12">Browse...</Button>
            <Label Content="RAM Studs File:" />
            <TextBox Name="txtEditorRAMStuds" Width="210" Margin="10,2,0,12"/>
            <Button Name="btnRAMStudsFile" Click="onBrowseFileClick" Margin="0,2,0,12">Browse...</Button>
            <Label Content="RAM Camber File:" />
            <TextBox Name="txtEditorRAMCamber" Width="210" Margin="10,2,0,12"/>
            <Button Name="btnRAMCamberFile" Click="onBrowseFileClick" Margin="0,2,0,12">Browse...</Button>
        </WrapPanel>
    </DockPanel>
</Window>
